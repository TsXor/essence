{
    "name": "tsxor/flarum-essence",
    "description": "Mark essential discussions in your forum.",
    "type": "flarum-extension",
    "keywords": [
        "discussion"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/TsXor/essence/issues",
        "source": "https://github.com/TsXor/essence",
        "forum": "https://github.com/TsXor/essence/discussions"
    },
    "homepage": "https://github.com/TsXor/essence",
    "require": {
        "flarum/core": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "TsXor\\Essence\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Essence",
            "category": "feature",
            "icon": {
                "name": "fas fa-star",
                "backgroundColor": "#3c13c3",
                "color": "#fff"
            }
        }
    },
    "require-dev": {
        "flarum/tags": "*@dev"
    }
}
